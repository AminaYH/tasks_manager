{
  "name": "rails",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@popperjs/core": "^2.11.8",
    "@rails/actioncable": "^7.0.4-3",
    "bootstrap": "^5.3.8",
    "css-loader": "^6.10.0",
    "sass": "^1.86.0",
    "sass-loader": "^11.0.0",
    "style-loader": "^3.3.4"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "esbuild-plugin-sass": "^1.0.1"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:watch": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch",
    "build:css": "sass --load-path=node_modules app/javascript/stylesheets/application.scss app/assets/builds/application.css",
    "watch:css": "sass --watch --load-path=node_modules app/javascript/stylesheets/application.scss:app/assets/builds/application.css",
    "watch": "yarn build:watch & yarn watch:css"
  }


}
