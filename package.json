{
  "name": "rails",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@popperjs/core": "^2.11.8",
    "@rails/actioncable": "^7.0.4-3",
    "bootstrap": "^5.3.8",
    "css-loader": "^6.10.0",
    "sass": "^1.86.0",
    "sass-loader": "^11.0.0",
    "style-loader": "^3.3.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "esbuild-plugin-sass": "^1.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "3",
    "tailwindcss-cli": "^0.1.2"
  },
  "scripts": {
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "sass --load-path=node_modules app/javascript/stylesheets/application.scss app/assets/builds/application.css",
    "build:tailwind": "yarn tailwindcss-cli -i ./app/javascript/stylesheets/tailwind.scss -o ./app/assets/builds/application.css --minify",
    "build": "yarn build:tailwind && yarn build:css && yarn build:js",
    "watch": "yarn build:tailwind --watch & yarn watch:css & yarn build:js --watch",
  }
}
